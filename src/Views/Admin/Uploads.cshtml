@model AI_Voice_Translator_SaaS.Models.ViewModels.AdminUploadsViewModel
@{
    ViewData["Title"] = "Uploads Management";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-file-audio me-2 text-primary"></i>Uploads Management
        </h2>
        <a href="/Admin/Dashboard" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle text-success mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.Uploads.Count(u => u.Status == "Completed")</h4>
                    <p class="text-muted mb-0">Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-spinner text-warning mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.Uploads.Count(u => u.Status == "Processing")</h4>
                    <p class="text-muted mb-0">Processing</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-clock text-secondary mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.Uploads.Count(u => u.Status == "Pending")</h4>
                    <p class="text-muted mb-0">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-times-circle text-danger mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.Uploads.Count(u => u.Status == "Failed")</h4>
                    <p class="text-muted mb-0">Failed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label class="form-label">Filter by Status</label>
                    <select name="status" class="form-select">
                        <option value="All" selected="@(Model.StatusFilter == "All")">All Status</option>
                        <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
                        <option value="Processing" selected="@(Model.StatusFilter == "Processing")">Processing</option>
                        <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                        <option value="Failed" selected="@(Model.StatusFilter == "Failed")">Failed</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Apply Filter
                    </button>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <a href="/Admin/Uploads" class="btn btn-secondary w-100">
                        <i class="fas fa-redo me-2"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Uploads Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>All Uploads (@Model.Uploads.Count)
                </h5>
                <button class="btn btn-sm btn-danger" onclick="cleanupFailedUploads()">
                    <i class="fas fa-trash me-2"></i>Cleanup Failed
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="uploadsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="5%">#</th>
                            <th width="30%">File Name</th>
                            <th width="10%">Size</th>
                            <th width="10%">Duration</th>
                            <th width="10%">Status</th>
                            <th width="15%">Uploaded At</th>
                            <th width="10%">User ID</th>
                            <th width="10%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (Model.CurrentPage - 1) * 20 + 1;
                        }
                        @foreach (var upload in Model.Uploads)
                        {
                            <tr id="upload-row-@upload.Id">
                                <td>@index</td>
                                <td>
                                    <i class="fas fa-file-audio text-primary me-2"></i>
                                    <strong>@upload.FileName</strong>
                                </td>
                                <td>@upload.FormattedSize</td>
                                <td>@upload.FormattedDuration</td>
                                <td>
                                    @if (upload.Status == "Completed")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Completed
                                        </span>
                                    }
                                    else if (upload.Status == "Processing")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-spinner fa-spin me-1"></i>Processing
                                        </span>
                                    }
                                    else if (upload.Status == "Failed")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Failed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@upload.Status</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var uploadedUtc = upload.UploadedAt.Kind == DateTimeKind.Unspecified
                                            ? DateTime.SpecifyKind(upload.UploadedAt, DateTimeKind.Utc)
                                            : upload.UploadedAt.ToUniversalTime();
                                        var uploadedLocal = uploadedUtc.AddHours(7);
                                    }
                                    <small>@uploadedLocal.ToString("dd/MM/yyyy HH:mm") (UTC+7)</small>
                                </td>
                                <td>
                                    <small class="font-monospace">@upload.UserId.ToString().Substring(0, 8)...</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Dashboard/Details/@upload.Id"
                                           class="btn btn-sm btn-info"
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger"
                                                onclick="deleteUpload('@upload.Id')"
                                                title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&status=@Model.StatusFilter">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&status=@Model.StatusFilter">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&status=@Model.StatusFilter">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function deleteUpload(uploadId) {
            if (confirm('Are you sure you want to delete this upload? This will also delete the file from storage.')) {
                $.post('/Admin/DeleteAudioFile', { audioFileId: uploadId }, function(response) {
                    if (response.success) {
                        $('#upload-row-' + uploadId).fadeOut(300, function() {
                            $(this).remove();
                        });
                        toastr.success(response.message);
                    } else {
                        toastr.error(response.message);
                    }
                }).fail(function() {
                    toastr.error('Request failed');
                });
            }
        }

        function cleanupFailedUploads() {
            if (confirm('This will delete all failed uploads. Continue?')) {
                toastr.info('Cleanup feature coming soon!');
                // TODO: Implement batch delete for failed uploads
            }
        }

        var refreshInterval = setInterval(function() {
            var hasProcessing = false;
            $('.badge.bg-warning').each(function() {
                var row = $(this).closest('tr');
                var uploadId = row.attr('id') ? row.attr('id').replace('upload-row-', '') : 
                              (row.find('a[href^="/Dashboard/Details"]').attr('href') ? 
                               row.find('a[href^="/Dashboard/Details"]').attr('href').split('/').pop() : null);
                
                if (uploadId) {
                    hasProcessing = true;
                    $.ajax({
                        url: '/Audio/GetStatus/' + uploadId,
                        type: 'GET',
                        global: false, // Không trigger global loading
                        success: function(data) {
                            if (data.status !== 'Processing') {
                                clearInterval(refreshInterval);
                                location.reload();
                            }
                        }
                    });
                }
            });
            
            if (!hasProcessing) {
                clearInterval(refreshInterval);
            }
        }, 10000);
    </script>
}