@model AI_Voice_Translator_SaaS.Models.ViewModels.AdminLogsViewModel
@{
    ViewData["Title"] = "System Logs";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-clipboard-list me-2 text-primary"></i>System Logs
        </h2>
        <div class="d-flex gap-2">
            <button class="btn btn-danger" onclick="clearLogs()">
                <i class="fas fa-trash me-2"></i>Clear Old Logs
            </button>
            <a href="/Admin/Dashboard" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filter by Action</label>
                    <select name="actionFilter" class="form-select">
                        <option value="All" selected="@(Model.ActionFilter == "All")">All Actions</option>
                        <option value="Login" selected="@(Model.ActionFilter == "Login")">Login</option>
                        <option value="Register" selected="@(Model.ActionFilter == "Register")">Register</option>
                        <option value="Upload" selected="@(Model.ActionFilter == "Upload")">Upload</option>
                        <option value="Download" selected="@(Model.ActionFilter == "Download")">Download</option>
                        <option value="Delete" selected="@(Model.ActionFilter == "Delete")">Delete</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Apply Filter
                    </button>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <a href="/Admin/Logs" class="btn btn-secondary w-100">
                        <i class="fas fa-redo me-2"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-stream me-2"></i>Audit Logs (@Model.Logs.Count)
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-sm mb-0" id="logsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="5%">ID</th>
                            <th width="15%">Timestamp</th>
                            <th width="15%">User ID</th>
                            <th width="10%">Action</th>
                            <th width="15%">IP Address</th>
                            <th width="40%">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Logs == null || !Model.Logs.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-inbox text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2 mb-0">Không có logs nào được tìm thấy.</p>
                                    <small class="text-muted">Tổng số logs trong database: @Model.TotalLogs</small>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var log in Model.Logs)
                            {
                                var timestampUtc = log.Timestamp.Kind == DateTimeKind.Unspecified ? DateTime.SpecifyKind(log.Timestamp, DateTimeKind.Utc) : log.Timestamp.ToUniversalTime();
                                var timestampLocal = timestampUtc.AddHours(7);
                                <tr>
                                    <td><small class="text-muted">#@log.Id</small></td>
                                    <td>
                                        <small>
                                            <i class="fas fa-clock text-muted me-1"></i>
                                            @timestampLocal.ToString("dd/MM/yyyy HH:mm:ss") (UTC+7)
                                        </small>
                                    </td>
                                    <td>
                                        @if (log.UserId.HasValue)
                                        {
                                            <small class="font-monospace">@log.UserId.Value.ToString().Substring(0, 8)...</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">System</small>
                                        }
                                    </td>
                                <td>
                                    @if (log.Action == "Login")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-sign-in-alt me-1"></i>Login
                                        </span>
                                    }
                                    else if (log.Action == "Register")
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-user-plus me-1"></i>Register
                                        </span>
                                    }
                                    else if (log.Action == "Upload")
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-upload me-1"></i>Upload
                                        </span>
                                    }
                                    else if (log.Action == "Download")
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-download me-1"></i>Download
                                        </span>
                                    }
                                    else if (log.Action == "Delete")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">@log.Action</span>
                                    }
                                </td>
                                    <td>
                                        <small class="font-monospace">
                                            <i class="fas fa-network-wired text-muted me-1"></i>
                                            @log.IpAddress
                                        </small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            Action performed by user
                                        </small>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&actionFilter=@Model.ActionFilter">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>

                        @{
                            int startPage = Math.Max(1, Model.CurrentPage - 5);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 5);
                        }

                        @if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=1&actionFilter=@Model.ActionFilter">1</a>
                            </li>
                            @if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&actionFilter=@Model.ActionFilter">@i</a>
                            </li>
                        }

                        @if (endPage < Model.TotalPages)
                        {
                            @if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="?page=@Model.TotalPages&actionFilter=@Model.ActionFilter">@Model.TotalPages</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&actionFilter=@Model.ActionFilter">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>

    <!-- Log Statistics -->
    <div class="row g-3 mt-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-sign-in-alt text-success mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.LoginCount</h4>
                    <p class="text-muted mb-0">Logins</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-user-plus text-primary mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.RegisterCount</h4>
                    <p class="text-muted mb-0">Registrations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-upload text-info mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.UploadCount</h4>
                    <p class="text-muted mb-0">Uploads</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-download text-secondary mb-2" style="font-size: 2rem;"></i>
                    <h4 class="mb-0">@Model.DownloadCount</h4>
                    <p class="text-muted mb-0">Downloads</p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function clearLogs() {
            if (confirm('Delete logs older than 30 days?')) {
                $.post('/Admin/ClearOldLogs', function(response) {
                    if (response.success) {
                        toastr.success('Old logs cleared successfully');
                        setTimeout(() => location.reload(), 1500);
                    }
                    else {
                        toastr.error('Failed to clear logs');
                    }
                });
            }
        }
    </script>
}