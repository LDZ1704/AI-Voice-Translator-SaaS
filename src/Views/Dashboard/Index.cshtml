@model AI_Voice_Translator_SaaS.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Tổng file</p>
                            <h3 class="mb-0 fw-bold">@Model.Stats.TotalFiles</h3>
                        </div>
                        <div class="stat-icon bg-primary">
                            <i class="fas fa-file-audio"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Hoàn thành</p>
                            <h3 class="mb-0 fw-bold text-success">@Model.Stats.CompletedFiles</h3>
                        </div>
                        <div class="stat-icon bg-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Đang xử lý</p>
                            <h3 class="mb-0 fw-bold text-warning">@Model.Stats.ProcessingFiles</h3>
                        </div>
                        <div class="stat-icon bg-warning">
                            <i class="fas fa-spinner"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Tổng phút</p>
                            <h3 class="mb-0 fw-bold text-info">@Model.Stats.TotalMinutes</h3>
                        </div>
                        <div class="stat-icon bg-info">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm file..." value="@Model.SearchQuery">
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select">
                        <option value="All" selected="@(Model.StatusFilter == "All")">Tất cả trạng thái</option>
                        <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Hoàn thành</option>
                        <option value="Processing" selected="@(Model.StatusFilter == "Processing")">Đang xử lý</option>
                        <option value="Failed" selected="@(Model.StatusFilter == "Failed")">Lỗi</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                    <a href="/Dashboard" class="btn btn-secondary">
                        <i class="fas fa-redo me-2"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Files Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Danh sách file gần đây
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="filesTable">
                    <thead class="table-light">
                        <tr>
                            <th>File</th>
                            <th>Kích thước</th>
                            <th>Thời lượng</th>
                            <th>Trạng thái</th>
                            <th>Ngày tải lên</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.AudioFiles)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-file-audio text-primary me-2"></i>
                                    <strong>@file.FileName</strong>
                                </td>
                                <td>@file.FormattedSize</td>
                                <td>@file.FormattedDuration</td>
                                <td>
                                    @if (file.Status == "Completed")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Hoàn thành
                                        </span>
                                    }
                                    else if (file.Status == "Processing")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-spinner fa-spin me-1"></i>Đang xử lý
                                        </span>
                                    }
                                    else if (file.Status == "Failed")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>Lỗi
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pending</span>
                                    }
                                </td>
                                @{
                                    var uploadedUtc = file.UploadedAt.Kind == DateTimeKind.Unspecified
                                        ? DateTime.SpecifyKind(file.UploadedAt, DateTimeKind.Utc)
                                        : file.UploadedAt.ToUniversalTime();
                                    var uploadedLocal = uploadedUtc.AddHours(7);
                                }
                                <td>@uploadedLocal.ToString("dd/MM/yyyy HH:mm") (UTC+7)</td>
                                <td class="text-center">
                                    <a href="/Dashboard/Details/@file.Id" class="btn btn-sm btn-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-danger" onclick="deleteFile('@file.Id')" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@Model.SearchQuery&status=@Model.StatusFilter">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        function deleteFile(id) {
            if (confirm('Bạn có chắc muốn xóa file này?')) {
                $.post('/Audio/Delete/' + id, function(response) {
                    if (response.success) {
                        toastr.success('Đã xóa file');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        toastr.error('Không thể xóa file');
                    }
                });
            }
        }

        var refreshInterval = setInterval(function() {
            var hasProcessing = false;
            $('.badge.bg-warning').closest('tr').each(function() {
                var row = $(this);
                var fileId = row.find('a[href^="/Dashboard/Details"]').attr('href').split('/').pop();
                hasProcessing = true;

                $.ajax({
                    url: '/Audio/GetStatus/' + fileId,
                    type: 'GET',
                    global: false,
                    success: function(data) {
                        if (data.status !== 'Processing') {
                            clearInterval(refreshInterval);
                            location.reload();
                        }
                    }
                });
            });
            
            if (!hasProcessing) {
                clearInterval(refreshInterval);
            }
        }, 10000);
    </script>
}