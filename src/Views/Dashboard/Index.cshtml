@model AI_Voice_Translator_SaaS.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">Xin chào, @Model.CurrentUser.DisplayName! 👋</h2>
            <p class="text-muted">Tài khoản: @Model.CurrentUser.SubscriptionTier</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-file-earmark-music-fill text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-0">Tổng file</h6>
                            <h3 class="mb-0">@Model.Stats.TotalUploads</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-0">Hoàn thành</h6>
                            <h3 class="mb-0">@Model.Stats.CompletedTranslations</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-clock-fill text-warning" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-0">Đang xử lý</h6>
                            <h3 class="mb-0">@Model.Stats.PendingTranslations</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-hdd-fill text-info" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-0">Dung lượng</h6>
                            <h3 class="mb-0">@((Model.Stats.TotalStorageUsed / (1024.0 * 1024.0)).ToString("F1")) MB</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-custom">
                <div class="card-body text-center py-4">
                    <h5 class="mb-3">Thao tác nhanh</h5>
                    <a asp-controller="Audio" asp-action="Upload" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-cloud-upload"></i> Tải lên file mới
                    </a>
                    <a asp-action="History" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-clock-history"></i> Xem lịch sử
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Files -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-custom">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> File gần đây</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentFiles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Tên file</th>
                                        <th>Kích thước</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tải</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model.RecentFiles)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark-music text-primary me-2"></i>
                                                @file.FileName
                                            </td>
                                            <td>@file.FileSizeMB MB</td>
                                            <td>
                                                @if (file.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Hoàn thành
                                                    </span>
                                                }
                                                else if (file.Status == "Pending" || file.Status == "Processing")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock"></i> @file.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> Lỗi
                                                    </span>
                                                }
                                            </td>
                                            <td>@file.UploadedAtFormatted</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Chi tiết
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteFile('@file.Id')">
                                                    <i class="bi bi-trash"></i> Xóa
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3">Chưa có file nào. Hãy tải lên file đầu tiên!</p>
                            <a asp-controller="Audio" asp-action="Upload" class="btn btn-primary">
                                <i class="bi bi-cloud-upload"></i> Tải lên ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteFile(fileId) {
            if (confirm('Bạn có chắc muốn xóa file này?')) {
                $.ajax({
                    url: '/Audio/Delete/' + fileId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            alert('Đã xóa file thành công');
                            location.reload();
                        } else {
                            alert('Lỗi: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Không thể xóa file');
                    }
                });
            }
        }
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">