@model List<AI_Voice_Translator_SaaS.Models.ViewModels.AudioFileDto>

@{
    ViewData["Title"] = "Lịch sử";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold"><i class="bi bi-clock-history"></i> Lịch sử tải lên</h2>
            <p class="text-muted">Tổng cộng: @Model.Count file</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-custom">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tên file</th>
                                        <th>Kích thước</th>
                                        <th>Thời lượng</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tải</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark-music text-primary me-2"></i>
                                                <strong>@file.FileName</strong>
                                            </td>
                                            <td>@file.FormattedSize</td>
                                            <td>
                                                <span>@file.FormattedDuration</span>
                                            </td>
                                            <td>
                                                @if (file.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Hoàn thành
                                                    </span>
                                                }
                                                else if (file.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-clock"></i> Chờ xử lý
                                                    </span>
                                                }
                                                else if (file.Status == "Processing")
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-arrow-repeat"></i> Đang xử lý
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> Lỗi
                                                    </span>
                                                }
                                            </td>
                                            @{
                                                var uploadedUtc = file.UploadedAt.Kind == DateTimeKind.Unspecified
                                                    ? DateTime.SpecifyKind(file.UploadedAt, DateTimeKind.Utc)
                                                    : file.UploadedAt.ToUniversalTime();
                                                var uploadedLocal = uploadedUtc.AddHours(7);
                                            }
                                            <td>@uploadedLocal.ToString("dd/MM/yyyy HH:mm") (UTC+7)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/Audio/Download/@file.Id" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteFile('@file.Id')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-3 h5">Chưa có file nào</p>
                            <a asp-controller="Audio" asp-action="Upload" class="btn btn-primary mt-3">
                                <i class="bi bi-cloud-upload"></i> Tải lên file đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteFile(fileId) {
            if (confirm('Bạn có chắc muốn xóa file này?')) {
                $.ajax({
                    url: '/Audio/Delete/' + fileId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            alert('Đã xóa file thành công');
                            location.reload();
                        } else {
                            alert('Lỗi: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Không thể xóa file');
                    }
                });
            }
        }
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">